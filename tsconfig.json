{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "target": "ES6",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
